@model List<Livre>
@{
    ViewData["Title"] = "Livres";
}

<div>
    <h1>Livres</h1>
    @if (TempData.ContainsKey("ValidateMessage"))
    {
        <p>@TempData["ValidateMessage"]</p>
    }
    <form asp-asp-controller="Livres" asp-action="Index" method="get">
        <input type="hidden" name="sort" value="auteurs">
        <input type="submit" value="Tii par auteurs">
    </form>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>ISBN</th>
                <th>Date de publication</th>
                <th>Disponible</th>
                <th>Lien vers le détail</th>
                <th>Lien vers la modification</th>
                <th>Lien pour supprimer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Livre livre in @Model!)
            {
                <tr>
                    <td>@(livre.id)</td>
                    <td>@(livre.titre)</td>
                    <td>@(livre.auteur)</td>
                    <td>@(livre.isbn)</td>
                    <td>@(livre.date_publication)</td>
                    <td>@(livre.disponible)</td>
                    <td><a asp-controller="Livres" asp-action="Detail" asp-route-id="@(livre.id)">Détail</a></td>
                    <td><a asp-controller="Livres" asp-action="Editer" asp-route-id="@(livre.id)">Modifier</a></td>
                    <td>
                        <form class="formSupprLivre" asp-controller="Livres" asp-action="Supprimer" asp-route-id="@(livre.id)" method="post">
                            <input type="submit" value="Supprimer">
                            <input type="hidden" asp-for="@livre.id" name="idLivre">
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>